<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="10dp"
    android:layout_height="90dp"
    android:padding="5dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_from_to"
        android:background="@drawable/ic_action_import_export"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="35dp" />

    <FrameLayout
        android:id="@+id/from_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/switch_from_to">

        <EditText
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/from_gps"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/from_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/ic_action_cancel" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/to_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_fl"
        android:layout_toLeftOf="@id/switch_from_to">

        <EditText
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/to"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/to_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/ic_action_cancel" />

    </FrameLayout>



</RelativeLayout>