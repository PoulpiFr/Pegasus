<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ratp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prediction_item_height"
    android:padding="@dimen/prediction_padding">

        <fr.poulpi.pegasus.view.RATPLineSignView
            android:layout_width="@dimen/ratp_sign_width"
            android:layout_height="@dimen/ratp_sign_height"
            android:layout_centerVertical="true"
            android:id="@+id/sign"
            ratp:bgColor="@color/azur"
            ratp:filled="false"
            ratp:text="M"
            ratp:textSize="15sp"
            ratp:border="2dp"
            ratp:radius="10dp"
            ratp:textColor="@color/azur"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/prediction_textsize"
        android:textColor="@color/black"
        tools:text="Convention"
        android:layout_toRightOf="@id/sign"
        android:id="@+id/prediction_item_name"/>

</RelativeLayout>